namespace WebSite
{
    public partial class AnswerRecordDetail : BasePage
    {
        private AnswerRecordService answerRecordService=new AnswerRecordService();
		
		#region ---界面处理方法---

       	protected bool ShowPageDetail()
        {
			if (PageContext.Action == ActionType.Add)
			{
				dtpScoreTime.Text=DateTime.Now.ToShortDateString();
				return false;
			}

            AnswerRecord entity =answerRecordService.GetDomain(CurrentId);
			
            if (entity == null) return false;

			SetControlValues(entity);
			
			return true;
        }

        protected void Page_Load(object sender, EventArgs e)
        {
            if (!IsPostBack)
            {
                ShowPageDetail();
            }
        }
		#endregion
		
		#region ---操作处理方法---
		protected AnswerRecord GetDomainObject()
		{
            AnswerRecord  answerRecord = answerRecordService.GetDomain(CurrentId);

            if (answerRecord == null)
            {
                answerRecord = new AnswerRecord();
				answerRecord.ID=CurrentId;
            }

			GetControlValues(ref answerRecord);	
			
            return answerRecord;
		}

		#endregion
    }
}
